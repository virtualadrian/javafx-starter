          prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.76-ea" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.example.javafx.StarterController">
    <stylesheets>
        <URL value="@starter-application.css"/>
