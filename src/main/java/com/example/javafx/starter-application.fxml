    <children>
        <Label fx:id="helloLabel" text="Hello"/>
        <Button fx:id="helloButton" mnemonicParsing="false" onAction="#handleHelloButtonAction" text="Say Hello JavaFX!"
                GridPane.rowIndex="1" styleClass="helloButtonClass"/>
    </children>
</GridPane>
